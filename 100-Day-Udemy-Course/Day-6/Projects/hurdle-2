#2 functions needed to jump and turn

def turn_right():
    turn_left()
    turn_left()
    turn_left()

def jump():
    move()
    turn_left()    
    move()
    turn_right()
    move()
    turn_right()
    move()
    turn_left()
    
#or while Not at_goal():
while at_goal() != True:
    jump()  
